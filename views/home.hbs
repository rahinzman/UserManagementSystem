{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    User has been removed successfully.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
</div>
{{/if}}

<div class="row">
  <div class="col-6">Users</div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ Add User</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.First_name}}</td>
      <td>{{this.Last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td class="text-end">
        
        <span class=""><a href="/viewuser/{{this.id}}" type="button" class="btn btn-dark btn-small "><i class="bi bi-eye"></i><span class="d-none d-lg-inline">View</span></a></span>
        <span class=""><a href="/edituser/{{this.id}}" type="button" class="btn btn-dark btn-small "><i class="bi bi-pencil"></i><span class="d-none d-lg-inline">Edit</span></a></span>
        <span class=""><a href="/{{this.id}}" type="button" class="btn btn-dark btn-small g-2"><i class="bi bi-person-x"></i><span class="d-none d-lg-inline">Delete</span></a></span>
      </td>
      {{/each}}
    </tr>
  </tbody>
</table>